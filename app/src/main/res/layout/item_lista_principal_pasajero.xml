<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardItemListaUsuario_Pasajero"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="2dp"
            android:src="@drawable/icon_user"/>

        <TextView
            android:id="@+id/NombrePasajero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Nombre Pasajero"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/texto_borde"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DireccionPasajero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/NombrePasajero"
            android:textColor="@color/texto_borde"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="2dp"
            android:text="DirecciÃ³n"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <ImageButton
            android:id="@+id/opcionesItemPasajero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
