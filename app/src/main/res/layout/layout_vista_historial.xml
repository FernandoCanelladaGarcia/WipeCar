<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarLayoutHistorial"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"/>

    <Button
        android:id="@+id/buttonCargarHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/botones"
        android:fontFamily="@font/ubuntu_medium"
        android:textColor="@color/texto_borde"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/MainTitle"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_medium"
            android:text="WipeCar"
            android:textColor="@color/texto"
            android:textSize="34dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/botonSalirHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/botones"
            android:layout_marginLeft="315dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/ubuntu_medium"
            android:onClick="onClick"
            android:text="Salir"
            android:textColor="@color/texto_borde" />

        <Button
            android:id="@+id/botonBackHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/botones"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/ubuntu_medium"
            android:onClick="onClick"
            android:text="Back"
            android:textColor="@color/texto_borde"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>